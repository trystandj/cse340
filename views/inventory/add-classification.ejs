<!-- This is the content Heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>



<!-- This is the content -->
 <div class="content">
    <div class="add-classification-container">
    <form action="/inv/add-classification" method="post">

        <div class="form-group">
        <label for="classification_name">First Name:</label>
        <input type="text" id="classification_name" name="classification_name" required pattern="^[A-Za-z]+$" value="<%= locals.classification_name %>">
        <p>Name must be alphabetic characters only</p>
        </div>
        <div class="form-group">
        <button type="submit">Add Classification</button>
        </div>
        </form>
    </div>
</div>
    