<!-- This is the content Heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%- messages() %>
<!-- This is the content -->
 <div class="content">
    <div class="update-container">
    <form action="/account/update-account" method="post">
        <div class="form-group">
        <label for="account_firstname">First Name:</label>
        <input type="text" id="account_firstname" name="account_firstname" required value="<%= locals.account_firstname %>">
        </div>
        <div class="form-group">
        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required value="<%= locals.account_lastname %>">
        </div>
        <div class="form-group">
        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">
        </div>
                <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
        <div class="form-group">
        <button idtype="submit">Update</button>
        </div>
        </form>
    </div>

        <div class="password-container">
    <form action="/account/update-password" method="post">


        <div class="form-group">
        <label for="account_password">Password:</label>
        <input type="password"
            id="account_password"
            name="account_password"
            required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
            title="Password must be at least 8 characters long and include one uppercase letter, one number, and one special character (!@#$%^&*)">
        </div>
                        <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
        <div class="form-group">
        <button idtype="submit">Change Password</button>
        </div>
        </form>
    </div>
</div>
    